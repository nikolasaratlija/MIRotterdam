{% extends 'base/layout.twig' %}

{% block body %}
    <section id="contact" class="contact">

        <div class="container">
            <div class="section-title">
                <h1>Vesturen</h1>
                <p>Tevreden met je creatie? Verstuur jouw ontwerp naar gemeente Rotterdam</p>
            </div>

            <div class="gradient"></div>

            <div class="form-group contactlabel">
                <label for="age">Jouw leeftijd (optioneel)</label>
                <select class="form-select" id="age">
                    <option value="0">Selecteer</option>
                    <option value="1">Onder 12</option>
                    <option value="2">12-16</option>
                    <option value="3">17-21</option>
                    <option value="4">21-49</option>
                    <option value="5">50+</option>
                </select>
            </div>

            <div class="form-group contactlabel">
                <label for="email">Benieuwd naar veranderingen in jouw omgeving? Vul je email in!</label>
                <input type="email" class="form-control" name="email" id="email" placeholder="Email">
            </div>

            <div class="contactlabel">
                <h2>Jouw Ontwerp</h2>
                <img src="" id="design-preview-container" class="design-preview" alt="Preview van canvas">
            </div>

            <div class="text-center">
                <input id="submit-design-button" type="submit" class="submit-design-button" value="Versturen"
                       data-toggle="modal" data-target="#confirmationModal">
            </div>
        </div>

    </section>

    <div class="modal fade" id="confirmationModal" tabindex="-1" role="dialog" aria-labelledby="confirmationModalLabel"
         aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="confirmationModalLabel">Verstuurd!</h5>
                </div>

                <div class="modal-body">
                    <p>Bedankt voor het versturen van jouw ontwerp!</p>

                    <small>Binnen 5 seconden word je doorgestuurd naar de hoofdpagina...</small>
                </div>
            </div>
        </div>
    </div>

    <script src="/scripts/design-maker/submit-page/scripts.js" type="module"></script>
    <script src="/scripts/design-maker/submit-page/designPreview.js" type="module"></script>
    <script src="/scripts/design-maker/submit-page/submitDesign.js" type="module"></script>

{% endblock %}