{% extends 'base/layout.twig' %}

{% block body %}

    {% include 'admin/sidebar.twig' %}
    <script>
        function showPass($id) {
            var x = document.getElementById($id);
            if (x.type === "password") {
                x.type = "text";
            } else {
                x.type = "password";
            }
        }
    </script>

    <div style="margin-left:285px">
        <h2>Gebruikers</h2>

        <p>Klik op de knop om een gebruiker toe te voegen.</p>
        <!-- Button trigger modal -->
        <button type="button" class="btn btn-success mb-2" data-bs-toggle="modal" data-bs-target="#gebruikerModal">Gebruiker toevoegen</button><br>
        <p>Hier vindt u een overzicht van de gebruikers:</p>

        <!-- Modals -->
        <div class="modal fade" id="gebruikerModal" tabindex="-1" role="dialog" aria-labelledby="gebruikerModal" aria-hidden="true">
            <div class="modal-dialog modal-dialog-centered" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="exampleModalLongTitle">Gebruiker toevoegen</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body">

                        <form method="post" enctype="multipart/form-data">
                            <p>Hieronder kunt u een gebruiker toevoegen.<br></p>
                            <div class="form-group">
                                <label for="naam" class="col-form-label" >Gebruikersnaam: </label>
                                <input type="text" name="naam" placeholder="Elisa" class="form-control" required>
                            </div>
                            <div class="form-group">
                                <label for="email" class="col-form-label" >Email: </label><br>
                                <input type="text" name="email" placeholder="voorbeeld@gmail.com" class="form-control" id="wachtwoord" required>
                            </div>
                            <div class="form-group">
                                <label for="wachtwoord1" class="col-form-label" >Wachtwoord: </label><br>
                                <input type="password" id="wachtwoord1" name="wachtwoord" placeholder="wachtwoord" class="form-control" required>
                                <input type="checkbox" onclick="showPass('wachtwoord1')" id="checkpass">
                                <label for="checkpass" class="col-form-label">Toon wachtwoord</label><br>
                            </div>
                            <div class="form-group">
                                <input type="submit" value="Toevoegen" name="submit" class="form-control" style="background-color: #198754;color: white;"><br>
                            </div>
                        </form>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Sluiten</button>
                    </div>
                </div>
            </div>
        </div>

        <div class="modal fade" id="changePass" tabindex="-1" role="dialog" aria-labelledby="changePassModal" aria-hidden="true">
            <div class="modal-dialog modal-dialog-centered" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="exampleModalLongTitle">Wachtwoord aanpassen</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body">

                        <form method="post" enctype="multipart/form-data">
                            <div class="form-group">
                                <label for="password" class="col-form-label" >Nieuw wachtwoord: </label><br>
                                <input type="password" name="password" class="form-control" id="password" required>
                                <input type="checkbox" onclick="showPass('password')" id="checkpass">
                                <label for="checkpass" class="col-form-label">Toon wachtwoord</label><br>
                            </div>
                            <div class="form-group">
                                <input type="submit" value="Aanpassen" name="passBtn" class="form-control" style="background-color: #198754;color: white;"><br>
                            </div>
                        </form>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Sluiten</button>
                    </div>
                </div>
            </div>
        </div>
    </div>

{% endblock %}